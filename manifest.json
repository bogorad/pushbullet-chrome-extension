{
  "name": "Pushbullet for Chrome with SMS reception (Unofficial)",
  "version": "1.3.75",
  "description": "UNOFFICIAL Manifest-V3-compatible Pushbullet client - not affiliated with Pushbullet Inc.",
  "manifest_version": 3,
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "notifications",
    "contextMenus",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "https://*.pushbullet.com/*",
    "https://*.pushbulletusercontent.com/*"
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "options_page": "options.html",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/icon16.png",
        "icons/icon48.png",
        "icons/icon128.png",
        "icons/original-green.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
