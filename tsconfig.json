{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "WebWorker"],
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "noEmit": true,
    "useDefineForClassFields": true,
    "allowJs": true,
    "checkJs": false,
    "types": ["chrome"]
  },
  "include": [
    "src/**/*.ts"
  ]
}

